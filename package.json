{
    "name": "bilibili-youtube-danmaku",
    "version": "1.1.5",
    "description": "自动将Bilibili的弹幕同步显示在YouTube视频上 - Sync Bilibili danmaku to YouTube videos",
    "type": "module",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "dev:chrome": "wxt -b chrome",
        "dev:edge": "wxt -b edge",
        "dev:safari": "wxt -b safari",
        "build": "wxt build",
        "build:all": "wxt build && wxt build -b firefox && wxt build -b edge && wxt build -b safari",
        "build:chrome": "wxt build -b chrome",
        "build:firefox": "wxt build -b firefox",
        "build:edge": "wxt build -b edge",
        "build:safari": "wxt build -b safari",
        "zip": "wxt zip",
        "zip:all": "wxt zip && wxt zip -b firefox && wxt zip -b edge && wxt zip -b safari",
        "zip:chrome": "wxt zip -b chrome",
        "zip:firefox": "wxt zip -b firefox",
        "zip:edge": "wxt zip -b edge",
        "zip:safari": "wxt zip -b safari",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint . --ext .js,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "postinstall": "wxt prepare"
    },
    "devDependencies": {
        "@types/chrome": "^0.1.32",
        "@types/webextension-polyfill": "^0.12.4",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "@vitest/ui": "^4.0.15",
        "eslint": "^9.39.2",
        "happy-dom": "^20.0.11",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15",
        "wxt": "^0.20.7"
    },
    "keywords": [
        "bilibili",
        "youtube",
        "danmaku",
        "browser-extension",
        "chrome-extension",
        "firefox-addon",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/bilibili-youtube-danmaku"
    }
}
